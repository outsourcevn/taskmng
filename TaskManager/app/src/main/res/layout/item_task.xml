<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="1dp"
    android:background="@color/background_activity"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imv_Priority"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:src="@drawable/priority" />

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txt_Task"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="To do"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <SeekBar
                        android:id="@+id/seekBar_CompletePercent"
                        android:layout_width="170dp"
                        android:layout_height="20dp"
                        android:maxHeight="20dp"
                        android:progressDrawable="@drawable/theme_seekbar"
                        android:thumb="@drawable/thumb_timeline" />

                    <TextView
                        android:id="@+id/txt_CompletePercent"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content" />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txt_Start"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content" />

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="140dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:progress="20"
                        android:progressDrawable="@drawable/theme_progress" />

                    <TextView
                        android:id="@+id/txt_End"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content" />

                </TableRow>

            </LinearLayout>

            <Button
                android:id="@+id/btn_Menu"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:background="@drawable/btn_menu" />

        </LinearLayout>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageView
                android:id="@+id/imv_TaskType"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:src="@drawable/worker" />

            <TextView
                android:id="@+id/txt_TaskName"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="TASK MANAGER /nTASK MANAGER"
                android:gravity="center_vertical"/>

            <Button
                android:id="@+id/btn_Expand"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:background="@drawable/expand" />
        </TableRow>

    </LinearLayout>

</android.support.v7.widget.CardView>