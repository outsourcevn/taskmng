<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="1dp"
    android:background="@color/background_activity"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imv_Priority"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:src="@drawable/ic_task" />

            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="Done" />

                    <SeekBar
                        android:id="@+id/seekBar_CompletePercent"
                        android:layout_width="190dp"
                        android:layout_height="20dp"
                        android:progressDrawable="@drawable/theme_progress"
                        android:thumb="@drawable/thumb_timeline" />

                    <TextView
                        android:id="@+id/txt_CompletePercent"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content" />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_Start"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content" />

                    <!--<SeekBar-->
                    <!--android:id="@+id/seekBar_TimeLine"-->
                    <!--android:layout_width="190dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--style="@style/tallerBarStyle"/>-->

                    <!--<ProgressBar-->
                    <!--android:id="@+id/progressBar1"-->
                    <!--style="?android:attr/progressBarStyleHorizontal"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="100dp"-->
                    <!--android:max="100"-->
                    <!--android:progress="40"-->
                    <!--android:progressDrawable="@drawable/theme_progress"-->
                    <!--android:secondaryProgress="70"/>-->

                    <SeekBar
                        android:id="@+id/seekBar_TimeLine"
                        android:layout_width="190dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txt_End"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content" />

                </TableRow>

            </LinearLayout>


            <Button
                android:id="@+id/btn_Menu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:src="@drawable/ic_task" />


