<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="duc.taskmanager">

    <application
        android:name="com.activeandroid.app.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="AA_DB_NAME"
            android:value="task.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="1" />
        <meta-data
            android:name="AA_MODELS"
            android:value=" duc.taskmanager.database.Todo, duc.taskmanager.database.Doing,duc.taskmanager.database.Done" />

        <activity android:name=".activity.BaseActivity"></activity>
        <activity
            android:name=".activity.TodoActivity"
            android:label="@string/title_activity_doing"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".activity.DoingActivity"
            android:label="@string/title_activity_todo"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".activity.DoneActivity"
            android:label="@string/title_activity_done"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.UpdateTaskActivity"
            android:label="@string/title_activity_update_task"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.TaskActivity"
            android:label="@string/title_activity_task"
            android:theme="@style/AppTheme.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
